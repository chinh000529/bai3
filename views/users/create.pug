extends ../layouts/common

block content 
    h1 Create user
    if errors 
        each error in errors 
            .alert.alert-danger= error 
    form(action="/users/create", method="POST", enctype="multipart/form-data") 
        .form-group.mb-3
            label.form-label(for='name') Name
            input#name.form-control(type='text', name="name", value=values?values.name:"")

        .form-group.mb-3 
            label.form-label(for='age') Age
            input#age.form-control(type='text', name="age", value=values?values.age:"")
        
        .form-group.mb-3 
            label.form-label(for='email') Email
            input#email.form-control(type='email', name="email", value=values?values.email:"")

        .form-group.mb-3 
                    label.form-label(for='password') Password
                    input#password.form-control(type='password', name="password", value=values?values.password:"")

        .form-group.mb-3 
                    label.form-label(for='avatar') Avatar 
                    input#avatar.form-control(type='file', name="avatar")


        button.btn.btn-primary Create

        